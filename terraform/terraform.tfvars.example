# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"
project_name = "synthetics"

# Alert Configuration
# Set your email to receive alerts when canaries fail
alert_email = "your-email@example.com"

# Canary Schedules
# Using rate expressions (rate(X minutes/hours/days))
# Or cron expressions (cron(0 */5 * * ? *))
api_monitor_schedule = "rate(5 minutes)"
ui_monitor_schedule  = "rate(15 minutes)"
heartbeat_schedule   = "rate(5 minutes)"

# Start canaries automatically after deployment
start_canary = true

# Retention Settings
artifact_retention_days = 30
success_retention_days  = 31
failure_retention_days  = 31

# Alarm Thresholds
alarm_threshold         = 90    # Success rate percentage
alarm_evaluation_periods = 2    # Number of periods to evaluate
alarm_period            = 300   # Period in seconds
duration_threshold_ms   = 10000 # Duration threshold in milliseconds
