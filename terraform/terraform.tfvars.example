# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"
project_name = "synthetics"

# Alert Configuration
# Set your email to receive alerts when canaries fail
alert_email = "your-email@example.com"

# Canary Schedules
# Using rate expressions (rate(X minutes/hours/days))
# Or cron expressions (cron(0 */5 * * ? *))
api_monitor_schedule = "rate(5 minutes)"
ui_monitor_schedule  = "rate(15 minutes)"
heartbeat_schedule   = "rate(5 minutes)"

# Start canaries automatically after deployment
start_canary = true

# Retention Settings
artifact_retention_days = 30
success_retention_days  = 31
failure_retention_days  = 31

# Alarm Thresholds
alarm_threshold         = 90    # Success rate percentage
alarm_evaluation_periods = 2    # Number of periods to evaluate
alarm_period            = 300   # Period in seconds
duration_threshold_ms   = 10000 # Duration threshold in milliseconds
# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

function_name      = "az-health-check"
aws_region        = "us-east-1"
lambda_timeout    = 30
lambda_memory_size = 256
log_retention_days = 365  # 1 year retention for compliance

# Security and monitoring settings
enable_xray_tracing           = true
reserved_concurrent_executions = -1  # -1 means unreserved (unlimited concurrency)

# Optional: KMS encryption for logs and environment variables
# kms_key_arn = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# Optional: Dead Letter Queue configuration
# enable_dlq     = true
# dlq_target_arn = "arn:aws:sqs:us-east-1:123456789012:az-health-check-dlq"

tags = {
  Name        = "az-health-check"
  Purpose     = "AZ Health Monitoring"
  Environment = "production"
  ManagedBy   = "Terraform"
}
